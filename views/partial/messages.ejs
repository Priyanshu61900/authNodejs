<script>
    <% if(locals.flash.success && flash.success.length > 0){%>
    new Noty({
        theme: 'relax',

        text: '<%= flash.success %>',
        type: 'success',
        layout: 'topRight',
        timeout: 1900,

    }).show();
    <%} %>

    <% if(locals.flash.error && flash.error.length > 0){%>
    new Noty({
        theme: 'relax',

        text: '<%= flash.error %>',
        type: 'error',
        layout: 'topRight',
        timeout: 1900,

    }).show();
    <%} %>
</script>